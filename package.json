{
  "name": "padelbrain",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'ESLint no configurado aún. Instalar con: npm i -D eslint @typescript-eslint/eslint-plugin @typescript-eslint/parser' && exit 0",
    "lint:check": "npm run lint",
    "format": "echo 'Prettier no configurado aún. Instalar con: npm i -D prettier' && exit 0",
    "format:check": "npm run format",
    "test": "echo 'Jest no configurado aún. Ver informe de auditoría para setup completo' && exit 0",
    "test:watch": "npm test",
    "test:coverage": "npm test",
    "validate": "npm run typecheck",
    "clean": "rm -rf node_modules && npm install",
    "prebuild": "npm run typecheck"
  },
  "dependencies": {
    "@expo/metro-runtime": "~3.1.3",
    "@react-native-async-storage/async-storage": "1.21.0",
    "@react-native-community/slider": "^5.0.1",
    "@react-native-voice/voice": "^3.1.5",
    "expo": "^54.0.13",
    "expo-status-bar": "~1.11.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.73.6",
    "react-native-get-random-values": "~1.8.0",
    "react-native-web": "~0.19.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/jest": "^30.0.0",
    "@types/react": "~18.2.45",
    "@types/react-native": "~0.73.0",
    "@types/uuid": "^9.0.8",
    "babel-plugin-module-resolver": "^5.0.0",
    "typescript": "^5.3.0"
  },
  "private": true
}